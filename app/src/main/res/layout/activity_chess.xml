<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChessActivity">

    <GridLayout
        android:layout_width="383dp"
        android:layout_height="506dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/a8"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="pieceClicked"
            android:background="@color/chessWhite"
            app:srcCompat="@drawable/brook" />

        <ImageView
            android:id="@+id/b8"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginTop="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="pieceClicked"
            android:background="@color/chessDark"
            app:srcCompat="@drawable/bknight" />

        <ImageView
            android:id="@+id/a7"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginStart="15dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="pieceClicked"
            android:background="@color/chessDark"
            app:srcCompat="@drawable/bpawn" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:background="@color/chessWhite"
            android:onClick="pieceClicked"
            app:srcCompat="@android:drawable/toast_frame"
            tools:srcCompat="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:background="@color/chessDark"
            android:onClick="pieceClicked"
            app:srcCompat="@android:drawable/toast_frame"
            tools:srcCompat="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:background="@color/chessWhite"
            android:onClick="pieceClicked"
            app:srcCompat="@android:drawable/toast_frame"
            tools:srcCompat="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:background="@color/chessDark"
            android:onClick="pieceClicked"
            app:srcCompat="@android:drawable/toast_frame"
            tools:srcCompat="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginStart="15dp"
            android:layout_row="6"
            android:layout_column="0"
            android:onClick="pieceClicked"
            android:background="@color/chessWhite"
            app:srcCompat="@drawable/wpawn" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginStart="15dp"
            android:layout_row="7"
            android:layout_column="0"
            android:onClick="pieceClicked"
            android:background="@color/chessDark"
            app:srcCompat="@drawable/wrook" />
    </GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="110dp"
        android:text="@string/undo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/ai_move"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="109dp"
        android:text="@string/draw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="35dp"
        android:text="@string/resign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>